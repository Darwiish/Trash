<br /><br /><br />

<div class="row bg">

    <div class="col col-xs-12 col-sm-6 col-md-5 col-lg-4 center">
        <section>

            <form method="post">
                @*asp-action="Check" asp-controller="Admin"*@
                <div class="center-basic100">
                    <br />
                    <h1 style="font-size:40px" class="whiteOnBlack  text-center">HELLO, THERE!</h1><br />
                    <h4 class="whiteOnBlack center-basic text-center">Sign in to TYT or join us if you are new.</h4>
                    <br /><br />
                </div>
                @*<hr />*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group center-basic">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.Email" class="form-special whiteOnBlack" style="width:100%; margin-bottom:10px;" type="email" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group center-basic">
                    @*<label asp-for="Input.Password"></label>*@
                    <input asp-for="Input.Password" class="form-special whiteOnBlack" style="width:100%" type="password" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <input asp-for="Input.Password" class="form-control,form-special" type="password" placeholder="Password" style="visibility: hidden" />
                </div>
                <div class="form-group center-basic">
                    <div class="checkbox center-basic100 text-center">
                        <label asp-for="Input.RememberMe" class="whiteOnBlack">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="form-group center-basic">

                    <button type="submit" class="btn btn-default center-block">Log in</button>
                </div>

                <div class="form-group center-basic">
                    <p class="text-center">
                        <a asp-page="./ForgotPassword" class="whiteOnBlack">Forgot your password?</a>
                    </p>
                    <p class="text-center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="whiteOnBlack">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>


